<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ViewModels="clr-namespace:BBQRMSSolution.ViewModels" x:Class="BBQRMSSolution.App"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ScreenDataTemplates.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<ViewModels:MainWindowViewModel x:Key="mainWindowViewModel" />

			<!-- Resources scoped at the Application level should be defined here. -->
			<Style x:Key="PageHeadingStyle" TargetType="{x:Type TextBlock}">
				<Setter Property="TextWrapping" Value="NoWrap"/>
				<Setter Property="TextTrimming" Value="None"/>
				<Setter Property="FontWeight" Value="Bold"/>
				<Setter Property="TextAlignment" Value="Center"/>
				<Setter Property="FontSize" Value="26.667"/>
			</Style>

			<Color x:Key="ApplicationBackgroundColor">White</Color>
			<SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{DynamicResource ResourceKey=ApplicationBackgroundColor}" />

		</ResourceDictionary>

	</Application.Resources>
</Application>