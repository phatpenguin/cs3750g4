<Views:UserControlBase
	x:Class="BBQRMSSolution.Views.QuickInventoryScreen"
	x:TypeArguments="ViewModels:QuickInventoryViewModel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:Views="clr-namespace:BBQRMSSolution.Views"
	xmlns:ViewModels="clr-namespace:BBQRMSSolution.ViewModels"
	mc:Ignorable="d" 
	d:DesignHeight="480" d:DesignWidth="800"
	d:DataContext="{d:DesignInstance Type=ViewModels:QuickInventoryViewModel, IsDesignTimeCreatable=True}">
	<UserControl.Resources>
		<DataTemplate x:Key="item">
			<Border Margin="8" BorderThickness="1" CornerRadius="3" BorderBrush="Black" Background="White" MaxWidth="210">
				<Grid Margin="2" VerticalAlignment="Stretch">
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<TextBlock Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}" TextAlignment="Center" FontSize="20" Margin="10"/>
					<Grid Grid.Row="1">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<RepeatButton Content="-" FontSize="18" Margin="4" Height="50" Width="50" Grid.Column="0" Command="{Binding DecrementCommand}" />
						<TextBox FontSize="18" Text="{Binding Number, Mode=OneWay}" TextAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" BorderThickness="0"/>
						<RepeatButton Content="+" FontSize="18" Margin="4" Height="50" Width="50" Grid.Column="2" Command="{Binding IncrementCommand}" />
					</Grid>
					<Button Grid.Row="2" Margin="4" Height="40" FontSize="16" Content="Remove" CommandParameter="{Binding}" Command="{Binding Path=DataContext.RemoveInventoryCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>
				</Grid>
			</Border>

		</DataTemplate>
		<DataTemplate x:Key="tabContent">
			<ItemsControl ItemsSource="{Binding Items}" ItemTemplate="{StaticResource ResourceKey=item}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel Orientation="Horizontal"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</DataTemplate>
	</UserControl.Resources>
	<Grid x:Name="LayoutRoot">
		<TabControl TabStripPlacement="Left" ContentTemplate="{StaticResource ResourceKey=tabContent}" ItemsSource="{Binding Locations}">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource ResourceKey=BigTabStyle}"/>
			</TabControl.Resources>
			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</TabControl.ItemTemplate>
		</TabControl>
		<Border CornerRadius="5" Padding="3" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsWorking, Converter={StaticResource ResourceKey=boolToVisibilityConverter}}">
			<Grid HorizontalAlignment="Center">
				<StackPanel>
					<TextBlock Text="Removing item from inventory..." FontSize="22" />
					<ProgressBar IsIndeterminate="True" HorizontalAlignment="Stretch" Height="25"/>
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Views:UserControlBase>