<UserControl x:Class="BBQRMSSolution.Views.ReconcileInventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Controls;assembly=Controls" 
             mc:Ignorable="d" 
             xmlns:Behaviors="clr-namespace:Controls.Behaviors;assembly=Controls">

  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
      <c:ImageButton
        Style="{StaticResource ImageButton.FormButton}"
        Content="Save"
        ImageSource="{StaticResource BBQRMS.Image.Save}"
        Click="Button_Save"/>
      <c:ImageButton
        Style="{StaticResource ImageButton.FormButton}"
        Content="Delete"
        ImageSource="{StaticResource BBQRMS.Image.Trash}"
        Click="Button_Delete"/>
    </StackPanel>

    <TabControl ItemsSource="{Binding MasterInventories}"
                d:LayoutOverrides="VerticalAlignment"
                TabStripPlacement="Left"
                SelectedItem="{Binding SelectedMasterInventory}">
      <TabControl.Resources>
        <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource ResourceKey=BigTabStyle}">
          <Setter Property="MinHeight" Value="35"/>
          <Setter Property="TextElement.FontSize" Value="16"/>
        </Style>
      </TabControl.Resources>
      <TabControl.Background>
        <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
          <GradientStop Color="#FFFCFCFE" Offset="0"/>
          <GradientStop Color="#FFF4F3EE" Offset="1"/>
        </LinearGradientBrush>
      </TabControl.Background>
      <TabControl.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </TabControl.ItemTemplate>
      <TabControl.ContentTemplate>
        <DataTemplate>
          <DockPanel>
            <StackPanel Margin="5">
              <TextBlock Height="32" FontSize="18" FontWeight="Bold" >
                <Run Text="{Binding Path=Name}"/>
              </TextBlock>
              <StackPanel DockPanel.Dock="Left">
                <StackPanel Margin="2" Orientation="Horizontal">
                  <Label Content="Name" Name="NameLbl" Width="120"/>
                  <TextBox Name="NameTb" Text="{Binding Path=Name}"  Width="300"/>
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                  <Label Content="Quantity" Name="UnitQtyLbl" Width="120"/>
                  <TextBox Name="UnitQtyTb" Text="{Binding Path=UnitQty}"  Width="50"/>
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                  <Label Content="Expiration Date" Name="ExpirationDateLbl" Width="120"/>
                  <TextBox Name="ExpirationDateTb" Text="{Binding Path=ExpirationDate}" Width="300"/>
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                  <Label Content="OrderLeadDays" Name="OrderLeadDaysLbl" Width="120"/>
                  <TextBox Name="OrderLeadDaysTb" Text="{Binding Path=OrderLeadDays}" Width="50"/>
                </StackPanel>
              </StackPanel>
            </StackPanel>
          </DockPanel>
        </DataTemplate>
      </TabControl.ContentTemplate>
    </TabControl>
  </DockPanel>
</UserControl>
