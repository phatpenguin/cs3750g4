<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ViewModels="clr-namespace:BBQRMSSolution.ViewModels"
	xmlns:Views="clr-namespace:BBQRMSSolution.Views">

	<DataTemplate DataType="{x:Type ViewModels:ReportViewModel}">
		<Views:ReportViewer />
	</DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CustomerOrderScreenViewModel}">
        <Views:CustomerOrderScreen />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:LoginViewModel}">
		<Views:LoginView />
	</DataTemplate>
	
	<DataTemplate DataType="{x:Type ViewModels:PostLoginViewModel}">
		<Views:PostLoginView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ChooseReportViewModel}">
		<Views:ChooseReport />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:EmployeeManagementViewModel}">
		<Views:EmployeeManangment />
	</DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:InventoryManagementViewModel}">
        <Views:InventoryManagement />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:InventoryItem}">
        <Views:InventoryItemDetail />
    </DataTemplate>
</ResourceDictionary>