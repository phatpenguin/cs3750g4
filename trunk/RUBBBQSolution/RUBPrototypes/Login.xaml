				<Button Content="7" Margin="3" FontSize="32"/>
				<Button Content="8" Margin="3" FontSize="32"/>
				<Button Content="9" Margin="3" FontSize="32"/>
				<Button Content="4" Margin="3" FontSize="32"/>
				<Button Content="5" Margin="3" FontSize="32"/>
				<Button Content="6" Margin="3" FontSize="32"/>
				<Button Content="1" Margin="3" FontSize="32"/>
				<Button Content="2" Margin="3" FontSize="32"/>
				<Button Content="3" Margin="3" FontSize="32"/>
				<Button Content="0" Margin="3" FontSize="32"/>
				<Button Content="Cancel" Margin="3" FontSize="32"/>
				<Button Content="Enter" Margin="3" FontSize="32"/>
			</UniformGrid>
			<TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="Enter your PIN to log in" VerticalAlignment="Top" Margin="0,8,8,0" Width="434" TextAlignment="Center" FontSize="29.333"/>
			<PasswordBox VerticalAlignment="Top" Margin="342,133,8,0" FontSize="32" Password="44444"/>
